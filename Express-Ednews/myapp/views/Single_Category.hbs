	<section class="ptb-30">
		<div class="container">
			<div class="row">
			
				<div class="col-md-12 col-lg-8">
					{{#each NameCat}}
					<div class="ptb-0">
						<a class="mt-10" href="/"><i class="mr-5 ion-ios-home"></i><b>TRANG CHá»¦</b></a>
						<a class="mt-10 color-ash" href="/{{TenKhongDau_Cha}}"><i class="mlr-10 ion-chevron-right"></i><b>{{TenCha}}</b></a>
						<a class="mt-10 color-ash" href="/{{TenKhongDau_Cha}}/{{TenChuyenMuc_KhongDau}}"><i class="mlr-10 ion-chevron-right"></i><b>{{TenChuyenMuc}}</b></a>
						 
						<h1 class="mtb-20"><b>{{TenChuyenMuc}}</b></h1>
					</div>
					{{/each}}
					{{#each Post}}
					<div class="mb-30 sided-250x s-lg-height card-view">
						<div class="s-left">
							<a href="/{{KhongDauCha}}/{{KhongDauCon}}/{{IDBaiViet}}/{{TieuDe_KhongDau}}"><img src="../images/{{urllinkHinh}}" alt=""></a>
						</div><!-- left-area -->
						<div class="s-right ptb-30 pt-sm-20 pb-xs-5 plr-30 plr-xs-0">
							<h4><a href="/{{KhongDauCha}}/{{KhongDauCon}}/{{IDBaiViet}}/{{TieuDe_KhongDau}}">{{TieuDe}}</a></h4>
							<ul class="mtb-10 list-li-mr-20 color-lite-black">
								<li><i class="mr-5 font-12 ion-clock"></i>{{format NgayDang}}</li>
								<li><i class="mr-5 font-12 ion-android-person"></i>{{ButDanh}}</li>
								<li class="category"><a href="/{{KhongDauCha}}/{{KhongDauCon}}">{{TenChuyenMuc}}</a></li>
							</ul>
							<p class="mt-10">{{NoiDungTomTat}}</p>
						</div><!-- right-area -->
					</div><!-- sided-250x -->
					{{/each}}
					
					<ul class="pagination mb-30">
						{{!-- kiem tra neu khong phai la page cuoi cung --}}
						{{#unless checkPre.check}}
						<li><a href="?page={{ checkPre.value }}"><i class="ion-chevron-left"></i></a></li>
						{{/unless}}
						{{#each this.pages}}
						{{#if active}}
						<li class="active"><a href="javascript:;">{{value}}</a></li>
						{{else}}
						<li ><a href="?page={{value}}">{{value}}</a></li>
						{{/if}}
						{{/each}}
						{{#unless checkNext.check}}
						<li><a href="?page={{ checkNext.value }}"><i class="ion-chevron-right"></i></a></li>
						{{/unless}}
					</ul>
					
				</div><!-- col-sm-8 -->
				
				{{> card-view}}
			</div><!-- row -->
		</div><!-- container -->
	</section>
	
