<link rel="stylesheet" href="/javascripts/datatable/dataTables.bootstrap4.css">
{{>AdminNav}}
<div id="wrapper">
  {{>AdminSlidebar}}
  <div id="content-wrapper">

    <div class="container-fluid">

      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Bài viết đang chờ xuất bản</li>
      </ol>
      {{#if mesg.length}}
      <div class="alert alert-success" role="alert">
        {{mesg}}
      </div>
      {{/if}}
      <!-- DataTables Example -->
      <div class="card mb-3 List-Wait-release">
        <div class="card-header">
          <i class="fas fa-table"></i>
          Danh sách bài viết</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Tiêu đề</th>
                  <th>Chuyên mục</th>
                  <th>Ngày duyệt</th>
                  <th style="width:100px">Ngày cần xuất bản</th>
                  <th>Người duyệt</th>
                  <th style="width:130px" >Action</th>
                </tr>
              </thead>
              <tbody>
                {{#if isAdministrator}}
                {{#each post}}
                <tr>
                  <td>{{TieuDe}}</td>
                  <td>{{TenChuyenMuc}}</td>
                  <td>{{format NgayDuyet}}</td>
                  <td>{{format NgayDang}}</td>
                  <td>{{NguoiDuyet}}</td>
                  <td class="action">
                    <form action="/admin/xuat-ban-bai-viet/{{IDBaiViet}}" method="POST">
                      <input type="text" name="IDpost" value="{{IDBaiViet}}" class="d-none">
                      <button type="submit">Xóa</button>
                      <button type="submit" style="background-color: #0062cc">Xuất bản</button>
                      <p class="mt-2"><a href="/admin/xem-bai-viet/{{IDBaiViet}}" title="">Xem bài viết</a></p>
                    </form>
                  </td>
                </tr>
                {{/each}}
                {{else}}
                {{#each post}}
                <tr>
                  <td>{{TieuDe}}</td>
                  <td>{{TenChuyenMuc}}</td>
                  <td>{{format NgayDuyet}}</td>
                  <td>{{format NgayDang}}</td>
                  <td>{{NguoiDuyet}}</td>
                  <td class="action text-center"><a href="/admin/xem-bai-viet/{{IDBaiViet}}" title="">Xem bài viết</a></td>
                </tr>
                {{/each}}
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>


    </div>
    <!-- /.container-fluid -->

    <!-- Sticky Footer -->
    {{>AdminFooter}}

  </div>
</div>
{{>AdminLogoutmodal}}