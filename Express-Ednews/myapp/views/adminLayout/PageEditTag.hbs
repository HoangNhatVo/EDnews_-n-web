{{>AdminNav}}
 <div id="wrapper">   
   {{>AdminSlidebar}}
    <div id="content-wrapper">

      <div class="container-fluid">
       
<div class="card shadow">
  <h4 class="card-header">
    Chỉnh sửa tag
  </h4>
  <div class="card-body">
    <form method="POST" action="/admin/danh-sach-tag/chinh-sua-tag" >
      {{#each tag}}
      <div class="form-group">
        <label for="txtCatID" style="width:240px">ID Tag</label>
        <input readonly type="text" class="form-control" id="txtCatID" name="IDTag" value="{{IDTag}}">
      </div>
      
      <div class="form-group">
        <label for="txtCatName"style="width:240px" >Tên Tag</label>
        <input type="text" class="form-control" id="txtCatName" name="TagName" autofocus
          placeholder="Enter category name" value="{{TenTag}}">
      </div>
      {{/each}}
      <a class="btn btn-primary" href="/admin/danh-sach-tag" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        trở về
      </a>
      <button type="submit" class="btn btn-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Lưu
      </button>
    </form>
   
  </div>
</div>
        

      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      {{>AdminFooter}}

    </div>
    </div>
