 <link rel="stylesheet" href="/javascripts/datatable/dataTables.bootstrap4.css">
 {{>AdminNav}}
 <div id="wrapper">   
   {{>AdminSlidebar}}
    <div id="content-wrapper">

      <div class="container-fluid">

        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/admin">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">Bài viết đang đã xuất bản</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3 List-Released">
          <div class="card-header">
            <i class="fas fa-table"></i>
            Danh sách bài viết</div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    
                    <th>Tiêu đề</th>
                    <th>Chuyên mục</th>
                    <th>Ngày viết</th>
                    <th>Người đăng</th>
                    <th>Ngày xuất bản</th>
                    <th>Action</th>                    
                  </tr>
                </thead>
                <tbody>
                  {{#if isAdministrator}}
                  {{#each post}}
                  <tr>
                    
                    <td>{{TieuDe}}</td>
                    <td>{{TenChuyenMuc}}</td>
                    <td>{{format NgayViet}}</td>
                    <td>{{ButDanh}}</td>
                    <td >
                      {{format NgayDang}}
                    </td>
                    <td class="action" style="text-align:center">
                      
                      <button type="submit" style="background-color: #35b335">Chọn làm bài viết nổi bậc</button>
                    <button type="submit">Xóa bài viết</button>
                    </td>
                    
                  </tr>
                {{/each}}
                {{else}}
                {{#each post}}
                  <tr>
                    
                    <td>{{TieuDe}}</td>
                    <td>{{TenChuyenMuc}}</td>
                    <td>{{format NgayViet}}</td>
                    <td>{{ButDanh}}</td>
                    <td >
                      {{format NgayDang}}
                    </td>
                    <td class="action">
                      
                    </td>
                    
                  </tr>
                {{/each}}
                {{/if}}
                </tbody>
              </table>
            </div>
          </div>
          
        </div>     

        

      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      {{>AdminFooter}}

    </div>
    </div>
    {{>AdminLogoutmodal}}