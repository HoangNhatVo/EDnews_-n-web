<link rel="stylesheet" href="/javascripts/datatable/dataTables.bootstrap4.css">
{{>AdminNav}}
<div id="wrapper">
  {{>AdminSlidebar}}
  <div id="content-wrapper">

    <div class="container-fluid">

      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Bài viết đang đã xuất bản</li>
      </ol>
      {{#if mesg.length}}
      <div class="alert alert-success" role="alert">
        {{mesg}}
      </div>
      {{/if}}
      <!-- DataTables Example -->
      <div class="card mb-3 List-Released">
        <div class="card-header">
          <i class="fas fa-table"></i>
          Danh sách bài viết</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>

                  <th>Tiêu đề</th>
                  <th>Chuyên mục</th>
                  <th>Ngày viết</th>
                  <th>Người đăng</th>
                  <th>Ngày xuất bản</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                {{#if isAdministrator}}
                {{#each post}}
                <tr>

                  <td>{{TieuDe}}</td>
                  <td>{{TenChuyenMuc}}</td>
                  <td>{{format NgayViet}}</td>
                  <td>{{ButDanh}}</td>
                  <td>
                    {{format NgayDang}}
                  </td>
                  <td class="action" style="text-align:center">
                    {{#unless TinNoiBat}}
                    <form action="/admin/bai-viet-da-xuat-ban/chon-bai-viet-noi-bat/{{IDBaiViet}}" method="POST">
                      <button type="submit" style="background-color: #35b335">Chọn làm bài viết nổi bậc</button>
                    </form>
                    {{/unless}}
                    {{#if TinNoiBat}}
                    <form action="/admin/bai-viet-da-xuat-ban/bo-chon-bai-viet-noi-bat/{{IDBaiViet}}" method="POST">
                      <button type="submit" style="background-color: #8b1be7">Bỏ bài viết nổi bậc</button>
                    </form>
                    {{/if}}
                    <form action="/admin/xoa-bai-viet/{{IDBaiViet}}" method="POST">
                      <button type="submit">Xóa bài viết</button>
                    </form>
                  </td>
                </tr>
                {{/each}}
                {{else}}
                {{#each post}}
                <tr>
                  <td>{{TieuDe}}</td>
                  <td>{{TenChuyenMuc}}</td>
                  <td>{{format NgayViet}}</td>
                  <td>{{ButDanh}}</td>
                  <td>
                    {{format NgayDang}}
                  </td>
                  <td class="action" style="width:120px">
                    <a href="/admin/xem-bai-viet/{{IDBaiViet}}" onclick="OpenPageCreateNewshtml(1)" title="">Xem bài
                      viết</a>
                  </td>
                </tr>
                {{/each}}
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>

      </div>



    </div>
    <!-- /.container-fluid -->

    <!-- Sticky Footer -->
    {{>AdminFooter}}

  </div>
</div>
{{>AdminLogoutmodal}}