<div class="row  ptb-10">
	<div class="col-md-8 col-lg-9">
		<span class="btn-fill-red plr-10 mtb-10 btn-b-md"><b><a href="/lien-he">Liên hệ</a></b></span>
		<span style="font-weight: 700" class="dplay-inl-block color-grey mtb-10 ml-15 ml-md-0 hover-grey">Tờ báo điện tử
			hàng đầu</span>
	</div><!-- col-md-8 -->
	<div class="col-md-4 col-lg-3">
		<form id="formsearch" class="abs-form mtb-10" method="POST">
			<input type="text" placeholder="Tìm kiếm" name="search" id="inputsearch">
			<button onclick="searchfunc(event)" type="submit" id="btnsubmit"><i class="ion-ios-search"></i></button>
		</form>
	</div><!-- col-md-4 -->
</div><!-- row -->
<script type="text/javascript">
	function searchfunc(event) {
		var content = document.getElementById('inputsearch').value;
		if (content == null || content == "") {
			alert("Bạn phải nhập nội dung tìm kiếm");
			event.preventDefault();
		}
		else
			document.getElementById('formsearch').setAttribute("action", `/tim-kiem/${content}`);
	}
</script>