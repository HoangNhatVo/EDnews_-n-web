<header>
	<div class="middle-header mt-xs-0">
		<div class="container">
			<div class="row">

				<div class="col-sm-4">
					<a class="logo" href="/"><img src="/images/logo-black.png" alt="Logo"></a>
				</div><!-- col-sm-4 -->

				<div class="col-sm-8 d-flex justify-content-end">
					<div class="dplay-tbl-cell text-right">
						<button type="button" >
							<a class="btn-fill-orange btn-b-sm plr-15 " href="/dangnhap">Đăng nhập</a>
						</button>
					</div>
					<div class="dplay-tbl-cell text-right">
						<button type="button" >
							<a class="btn-fill-white btn-b-sm plr-15 " href="/dangky">Đăng ký</a>
						</button>
					</div>
				</div><!-- col-sm-8 -->


			</div><!-- row -->
		</div><!-- container -->
	</div><!-- top-header -->

	<div class="bottom-menu">
		<div class="container">



			<ul class="main-menu" id="main-menu">
				<li class="drop-down"><a href="/">TRANG CHỦ</a>
				</li>
				
				{{#each lcCategorie}}
				<li style="text-transform:uppercase" class="drop-down"><a href="/{{mainCat.TenChuyenMuc_KhongDau}}">{{mainCat.TenChuyenMuc}}<i class="ion-chevron-down"></i></a>
					<ul class="drop-down-menu drop-down-inner">
						{{#each subCat}}
						<li><a href="/{{TenKhongDauCha}}/{{TenChuyenMuc_KhongDau}}">{{TenChuyenMuc}}</a></li>
						{{/each}}
					</ul>
				</li>
				{{/each}}
			</ul>
			<div class="clearfix"></div>
		</div><!-- container -->
	</div><!-- bottom-menu -->
</header>